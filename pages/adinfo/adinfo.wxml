<!--pages/adinfo/adinfo.wxml-->

<!--轮播图  -->
<view class="sw-info">

    <swiper indicator-dots="true" autoplay="true" interval="{{interval}}" duration="{{duration}}" circular="true"  indicator-color="#efc78c"   indicator-active-color="#ed9718">
        <block wx:for="{{imgUrls}}" wx:key="index">
            <swiper-item>
                <image src="{{item}}" class="slide-image" width="100%" mode="aspectFill"/>
            </swiper-item>
        </block>
    </swiper>
    </view>